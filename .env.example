# Application
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/exam_system_mvc

# Session
SESSION_SECRET=your-secret-key-here

# JWT
JWT_SECRET=your-jwt-secret-here

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Security
BCRYPT_SALT_ROUNDS=10

# File Upload
MAX_FILE_SIZE=5242880 # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW=15 # minutes
RATE_LIMIT_MAX_REQUESTS=100 

CLOUDINARY_URL=XXXXXXXXX

# Google Drive API Credentials
GOOGLE_TYPE=service_account
GOOGLE_PROJECT_ID=XXXXXXXXX
GOOGLE_PRIVATE_KEY_ID=XXXXXXXXX
GOOGLE_PRIVATE_KEY=XXXXXXXXX
GOOGLE_CLIENT_EMAIL=XXXXXXXXX
GOOGLE_CLIENT_ID=XXXXXXXXX
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_AUTH_PROVIDER_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
GOOGLE_CLIENT_CERT_URL=XXXXXXXXX
GOOGLE_UNIVERSE_DOMAIN=googleapis.com